// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum StaffRole {
  ADMIN
  EDITOR
}

model StaffUser {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  passwordHash String
  role         StaffRole  @default(EDITOR)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  referrals Referral[]
  tips      Tip[]
  events    Event[]
}

model Referral {
  id               Int        @id @default(autoincrement())
  organisationName String?
  category         String?
  website          String?
  phone            String?
  services         String?
  demographics     String?
  availability     String?
  email            String?
  address          String?
  region           String?
  notes            String?
  isActive         Boolean    @default(true)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  createdBy   StaffUser? @relation(fields: [createdById], references: [id])
  createdById Int?

  @@index([isActive])
}

model Tip {
  id          Int        @id @default(autoincrement())
  title       String
  body        String
  category    String?
  audience    String?
  ctaLabel    String?
  ctaUrl      String?
  priority    Int        @default(0)
  isActive    Boolean    @default(true)
  publishAt   DateTime?
  expiresAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  createdBy   StaffUser? @relation(fields: [createdById], references: [id])
  createdById Int?

  @@index([isActive, priority])
  @@index([publishAt])
}

model Event {
  id              Int        @id @default(autoincrement())
  title           String
  description     String?
  location        String?
  region          String?
  startDate       DateTime
  endDate         DateTime?
  registrationUrl String?
  icon            String?
  audience        String?
  isVirtual       Boolean    @default(false)
  isPublished     Boolean    @default(true)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  createdBy   StaffUser? @relation(fields: [createdById], references: [id])
  createdById Int?

  @@index([startDate])
  @@index([isPublished])
}
